{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ES2022",
        "rootDir": "./src",
        "outDir": "./dist",
        "removeComments": true,
        "moduleDetection": "auto",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "strictNullChecks": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*"],
    "exclude": ["tsup.config.ts", "dist", "node_modules"]
}